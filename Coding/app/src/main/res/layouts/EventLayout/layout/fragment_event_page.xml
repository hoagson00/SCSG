<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Event.EventPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="49dp">

        <ImageView
            android:id="@+id/event_page_frag_logo"
            android:layout_width="360dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/reclayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/event_page_frag_textview"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ubuntu_bold"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Filter By Date"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.037"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/event_page_frag_textview1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu_italic"
            android:gravity="right|center_horizontal|left|center_vertical"
            android:singleLine="true"
            android:text="From:"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview"
            app:layout_constraintVertical_bias="0.205"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/event_page_frag_textview2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/ubuntu_italic"
            android:gravity="right|center_horizontal|left|center_vertical"
            android:singleLine="true"
            android:text="To:"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview1"
            app:layout_constraintVertical_bias="0.034"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/event_page_frag_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ubuntu"
            android:text="Pick Date"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintStart_toEndOf="@+id/event_page_frag_textview1"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview"
            app:layout_constraintVertical_bias="0.289"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/event_page_frag_button1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ubuntu"
            android:text="Pick Date"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintStart_toEndOf="@+id/event_page_frag_textview2"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_button"
            app:layout_constraintVertical_bias="0.042"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/event_page_frag_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/light_gray"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.255"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/event_page_frag_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#1877F2"
            android:fontFamily="@font/ubuntu_bold"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toEndOf="@+id/event_page_frag_button2"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_button1"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/event_page_frag_textview3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="@font/ubuntu_italic"
            android:gravity="right|center_horizontal|left|center_vertical"
            android:singleLine="true"
            android:text="*: Pick at least 1 date"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.229"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview2"
            app:layout_constraintVertical_bias="0.085" />

        <RadioGroup
            android:id="@+id/event_page_frag_radiogroup"
            android:layout_width="262dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation='horizontal'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/event_page_frag_logo"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/event_page_frag_logo"
            app:layout_constraintTop_toBottomOf="@+id/event_page_frag_textview"
            app:layout_constraintVertical_bias="0.048">

            <RadioButton
                android:id="@+id/event_page_frag_radioBut"
                android:layout_width="97dp"
                android:layout_height="26dp"
                android:text="Start Date"
                android:textSize="10dp" />

            <RadioButton
                android:id="@+id/event_page_frag_radioBut1"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="Expiry Date"
                android:textSize="10dp" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>