<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context=".ui.login.LoginMenu.VerifyPhone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:id="@+id/phone_verify_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/back_button_logo"
                app:cornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.315"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/phone_verify_logo"
                android:layout_width="60dp"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/scsg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.139"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/phone_verify_logo1"
                android:layout_width="180dp"
                android:layout_height="43dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="REGISTER"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.471"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/phone_verify_logo2"
                android:layout_width="422dp"
                android:layout_height="10dp"
                android:src="@drawable/line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.942"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-6dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="650dp">


            <ImageView
                android:id="@+id/phone_verify_item_logo"
                android:layout_width="371dp"
                android:layout_height="150dp"
                android:background="@drawable/reclayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.132"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/phone_verify_fragment_button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:backgroundTint="#1877F2"
                android:fontFamily="@font/ubuntu"
                android:text="VERIFY"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.823"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.241" />

            <Button
                android:id="@+id/phone_verify_fragment_button1"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/ubuntu"
                android:text="GET CODE"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.172"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.241" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_verify_fragment_inputtext"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/object_round_corners"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/ubuntu"
                android:gravity="center|fill_vertical"

                android:hint="Enter verification code"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.142"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>