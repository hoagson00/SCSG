<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.login.LoginMenu.MainLogin">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="119dp">

      <ImageView
          android:id="@+id/main_login_image"
          android:layout_width="411dp"
          android:layout_height="106dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.461"
          app:srcCompat="@drawable/scsg2"
          tools:layout_editor_absoluteX="0dp"
          tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="78dp">

      <TextView
          android:id="@+id/main_login_button"
          android:layout_width="110dp"
          android:layout_height="51dp"
          android:backgroundTint="#FCA6A5"
          android:text="LOGIN"
          android:textColor="@color/black"
          android:textSize="35sp"
          android:textStyle="bold"
          app:cornerRadius="20dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.528"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_login_fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="416dp">

      <fragment
          android:id="@+id/userLoginFragement"
          class="com.example.csit321.ui.login.LoginMenu.UserLoginFragment"
          android:layout_width="match_parent"
          android:layout_height="451dp"
          tools:layout="@layout/user_login_fragment"
          tools:layout_editor_absoluteX="-3dp"
          tools:ignore="MissingConstraints" />

      <!--        <fragment-->
      <!--            android:id = "@+id/adminLoginFragment"-->
      <!--            class = "com.example.csit321.ui.login.LoginMenu.AdminLoginFragment"-->
      <!--            android:layout_width="match_parent"-->
      <!--            android:layout_height="match_parent"-->
      <!--            tools:layout="@layout/admin_login_fragment" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="165dp">

      <ImageView
          android:id="@+id/main_button_image1"
          android:layout_width="616dp"
          android:layout_height="205dp"
          android:src="@drawable/linkedlogo"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.502"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0"
          tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>
</RelativeLayout>